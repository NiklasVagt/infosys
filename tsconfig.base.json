{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@infosys/client-common": ["libs/client-common/src/index.ts"],
      "@infosys/dtos": ["libs/dtos/src/index.ts"],
      "@infosys/dtos/*": ["libs/dtos/src/lib/*"],
      "@infosys/node-common": ["libs/node-common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
